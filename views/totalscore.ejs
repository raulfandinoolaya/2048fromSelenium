</head>

<body id="page-top">

<!-- Navigation -->
<nav class="navbar navbar-expand-lg bg-secondary fixed-top text-uppercase" id="mainNav">
    <div class="container">
        <img src="/img/black-logo.png" style="max-width: 9%;margin-top: 1px;">
        <a class="navbar-brand js-scroll-trigger" href="#page-top" style="margin-right: 50rem;">AutoGame</a>
    </div>
</nav>


<!-- About Section -->
<section class="bg-primary text-white mb-0" id="about">
    <div class="container" style="margin-top: 6%">
        <h2 class="text-center text-uppercase text-secondary mb-0">High Score Table</h2>
        <hr>
        <div class="row" style="margin-top: 4%">

            <div class="col-md-12">
                <table class="table-score ">
                    <thead>
                    <tr>
                        <th style="padding-right: 102px;"></th>
                        <!--<th style="width: 25%;">Name</th>-->
                        <th style="width: 28%;">Name</th>
                        <th>Final Score</th>
                        <!--<th style="width: 9%; padding-left: 11%;">Game Score</th>-->
                        <th style="width: 18%; padding-left: 8%;">Game Score</th>
                        <!--<th style="padding-left: 5%; width: 9%">Fails</th>-->
                        <th style="padding-left: 5%; width: 15%">Fails</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="color: transparent"> .</td>
                    </tr>

                    <% for( var i = 0; i < scores.length; i++){ %>

                    <% if(i == 0){ %>
                    <tr class="first">
                        <td>1ST</td>
                        <% } %>

                        <% if(i == 1){ %>
                    <tr class="second">
                        <td>2ND</td>
                        <% } %>

                        <% if(i == 2){ %>
                    <tr>
                        <td>3RD</td>
                        <% } %>

                        <% if(i >= 3){ %>
                    <tr>
                        <td><%= i + 1 %>TH</td>
                        <% } %>

                        <!--No move-->
                        <td><%= scores[i].player %></td>
                        <td style="text-align: right"><%= scores[i].finalScore %></td>
                        <td style="text-align: right"><%= scores[i].actualScoreInTheGame %></td>
                        <td style="text-align: right"><%= scores[i].fails %></td>
                    <tr>
                        <% if(i == 1){ %>

                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="color: transparent"> .</td>
                    </tr>
                    <% } %>

                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>


        <form action="/" method="GET">
            <div class="text-center mt-4">
                <button class="btn btn-xl btn-outline-light">
                    Go to Registry
                </button>
            </div>
        </form>
    </div>

</section>


<!-- Footer -->
<footer class="footer text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-5 mb-lg-0">
                <h4 class="text-uppercase mb-4"></h4>
                <p class="lead mb-0"></p>
            </div>
            <div class="col-md-4 mb-5 mb-lg-0">
                <h4 class="text-uppercase mb-4">Test Automation</h4>
            </div>
            <div class="col-md-4">
                <h4 class="text-uppercase mb-4"></h4>
                <p class="lead mb-0"></p>

            </div>
        </div>
    </div>
</footer>

<!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Plugin JavaScript -->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

<!-- Contact Form JavaScript -->
<script src="js/jqBootstrapValidation.js"></script>
